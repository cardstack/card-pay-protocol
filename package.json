    "@openzeppelin/contract-upgradeable": "OpenZeppelin/openzeppelin-contracts-upgradeable#v2.5.0",
    "@openzeppelin/hardhat-upgrades": "^1.9.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
