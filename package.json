    "@typescript-eslint/parser": "^4.31.0",
    "CardPay-Contracts": "github:cardstack/card-commerce-protocol#371e0810ba0a252fc3a3a8c159fba3bc57b4fe0c",
    "async-await-retry": "^1.2.2",
    "chai": "^4.2.0",
