    "eth-lightwallet": "^4.0.0",
    "ganache-cli": "^6.12.1",
    "mocha": "^8.2.1",
    "pify": "^5.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.7",
