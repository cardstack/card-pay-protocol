{
  "name": "card-protocol-xdai",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/truffle compile",
    "build:clean": "rm -rf build && yarn build",
    "test": "yarn lint && yarn test:sol",
    "test:sol": "./node_modules/.bin/truffle test",
    "test:coverage": "./node_modules/.bin/truffle run coverage",
    "lint": "yarn lint:js && yarn lint:sol",
    "lint:js": "./node_modules/.bin/eslint .",
    "lint:sol": "./node_modules/.bin/solhint ./contracts/**/*.sol -w 0",
    "deploy:sokol": "./node_modules/.bin/truffle migrate -f --network=sokol --reset",
    "deploy:xdai": "./node_modules/.bin/truffle migrate -f --network xdai",
    "verify:sokol": "truffle run blockscout ERC677Token SPEND RevenuePool PrepaidCardManager BridgeUtils --network sokol --license UNLICENSED",
    "verify:xdai": "truffle run blockscout ERC677Token SPEND RevenuePool PrepaidCardManager BridgeUtils --network xdai --license UNLICENSED"
  },
  "repository": {
    "type": "git",
