{
  "name": "card-protocol-xdai",
  "version": "0.8.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/hardhat compile && ./node_modules/.bin/hardhat typechain",
    "build:clean": "rm -rf typechain && ./node_modules/.bin/hardhat clean && yarn build",
    "test": "yarn lint && yarn test:sol",
    "test:parallel": "yarn lint && ./node_modules/.bin/mocha",
    "test:sol": "./node_modules/.bin/hardhat test",
    "test:coverage": "./node_modules/.bin/hardhat coverage",
    "test:size": "{ ./node_modules/.bin/hardhat size-contracts | tee /dev/fd/3 | grep -q 'exceed the size limit for mainnet deployment' && exit 1; } 3>&1 || echo 'All contracts within size limit'",
    "watch:compile": "./node_modules/.bin/hardhat watch compile",
    "watch:test": "./node_modules/.bin/hardhat watch test",
    "lint": "npm-run-all lint:*",
    "lint:js": "./node_modules/.bin/eslint .",
    "lint:sol": "./node_modules/.bin/solhint ./contracts/**/*.sol -w 0",
    "ganache:stop": "for PID in $(ps -ef | grep ganache-cli | awk '{print $2}'); do kill $PID; done > /dev/null 2>&1 &",
    "deploy:contracts": "./node_modules/.bin/hardhat run scripts/deploy/001_initialize_contracts.js",
    "deploy:config-only": "yarn deploy:config:price-oracles && yarn deploy:config:protocol",
    "deploy:config-testnet-only": "yarn deploy:config:manual-feeds && yarn deploy:config:price-oracles && yarn deploy:config:protocol",
    "deploy:config:manual-feeds": "./node_modules/.bin/hardhat run scripts/deploy/002_configure_manual_feeds.js",
    "deploy:config:price-oracles": "./node_modules/.bin/hardhat run scripts/deploy/003_configure_price_oracles.js",
    "deploy:config:protocol": "./node_modules/.bin/hardhat run scripts/deploy/004_configure_card_protocol.js",
    "deploy": "yarn build:clean && yarn deploy:contracts && yarn deploy:config-only",
    "deploy:sokol": "env HARDHAT_NETWORK=sokol yarn deploy",
    "deploy:sokol:skip-verify": "env SKIP_VERIFY=true yarn deploy:sokol",
    "deploy:sokol:upgrade-only": "yarn build:clean && env HARDHAT_NETWORK=sokol yarn deploy:contracts",
    "deploy:sokol:config-only": "env HARDHAT_NETWORK=sokol yarn deploy:config-testnet-only",
    "deploy:sokol:upgrade-only:skip-verify": "env SKIP_VERIFY=true yarn deploy:sokol:upgrade-only",
    "deploy:xdai": "env HARDHAT_NETWORK=xdai yarn deploy",
    "deploy:xdai:skip-verify": "env SKIP_VERIFY=true yarn deploy:xdai",
    "deploy:xdai:upgrade-only": "yarn build:clean && env HARDHAT_NETWORK=xdai yarn deploy:contracts",
    "deploy:xdai:config-only": "env HARDHAT_NETWORK=xdai yarn deploy:config-only",
    "deploy:xdai:upgrade-only:skip-verify": "env SKIP_VERIFY=true yarn deploy:xdai:upgrade-only",
    "deploy:hardhat": "env HARDHAT_NETWORK=localhost ./node_modules/.bin/hardhat run scripts/deploy/deploy_to_private_network.js",
    "deploy:localhost": "env HARDHAT_NETWORK=localhost SKIP_VERIFY=true yarn deploy:contracts",
    "deploy:smoketest": "rm -f .openzeppelin/addresses-localhost.json .openzeppelin/unknown-31337.json && yarn deploy:localhost && yarn deploy:localhost",
    "verify": "./node_modules/.bin/hardhat run scripts/verify.js",
    "verify:sokol": "env HARDHAT_NETWORK=sokol yarn verify",
    "verify:xdai": "env HARDHAT_NETWORK=xdai yarn verify",
    "release:sokol:patch": "node ./lib/prerelease.js patch && yarn deploy:sokol && node ./lib/release.js sokol patch",
    "release:sokol:patch:skip-verify": "node ./lib/prerelease.js patch && yarn deploy:sokol:skip-verify && node ./lib/release.js sokol patch",
    "release:sokol:patch:config-only": "node ./lib/prerelease.js patch && yarn deploy:sokol:config-only && node ./lib/release.js sokol patch",
    "release:sokol:patch:upgrade-only": "node ./lib/prerelease.js patch && yarn deploy:sokol:upgrade-only && node ./lib/release.js sokol patch",
    "release:sokol:patch:upgrade-only:skip-verify": "node ./lib/prerelease.js patch && yarn deploy:sokol:upgrade-only:skip-verify && node ./lib/release.js sokol patch",
    "release:sokol:minor": "node ./lib/prerelease.js minor && yarn deploy:sokol && node ./lib/release.js sokol minor",
    "release:sokol:minor:config-only": "node ./lib/prerelease.js minor && yarn deploy:sokol:config-only && node ./lib/release.js sokol minor",
    "release:sokol:major": "node ./lib/prerelease.js major && yarn deploy:sokol && node ./lib/release.js sokol major",
    "promote:xdai": "yarn deploy:xdai && node ./lib/release.js xdai promote",
    "promote:xdai:skip-verify": "yarn deploy:xdai:skip-verify && node ./lib/release.js xdai promote",
    "promote:xdai:config-only": "yarn deploy:xdai:config-only && node ./lib/release.js xdai promote",
    "promote:xdai:upgrade-only": "yarn deploy:xdai:upgrade-only && node ./lib/release.js xdai promote",
    "promote:xdai:upgrade-only:skip-verify": "yarn deploy:xdai:upgrade-only:skip-verify && node ./lib/release.js xdai promote"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cardstack/card-protocol-xdai.git"
  },
