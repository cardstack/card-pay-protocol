    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceFolder}/node_modules/.bin/truffle",
      "console": "integratedTerminal",
      "env": {},
      "args": ["test"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Sokol Migration",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceFolder}/node_modules/.bin/truffle",
      "console": "integratedTerminal",
      "env": {
        "BRIDGE_MEDIATOR": "0x16a80598DD2f143CFBf091638CE3fB02c9135528",
        "PAYABLE_TOKENS": "0xB236ca8DbAB0644ffCD32518eBF4924ba866f7Ee,0xFeDc0c803390bbdA5C4C296776f4b574eC4F30D1"
      },
      "args": ["migrate", "--network", "sokol", "--compile-all", "--reset"]
    }
  ]
}
